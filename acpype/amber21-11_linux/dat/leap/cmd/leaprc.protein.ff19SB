#
#	Load the main parameter set.
#
set default cmap on
parm19 = loadamberparams parm19.dat
frcmod19SB = loadamberparams frcmod.ff19SB
#
#	Load main chain and terminating amino acid libraries
#
loadOff amino19.lib
loadOff aminoct12.lib
loadOff aminont12.lib

